{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "properties": {
        "files": {
            "type": "object",
            "description": "File path key",
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "dependencies": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "dependent file path"
                            }
                        },
                        "verification": {
                            "oneOf": [
                                {
                                    "$ref": "definitions/verification.schema.json#/definitions/verification_types"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "definitions/verification.schema.json#/definitions/verification_types"
                                    }
                                }
                            ]
                        },
                        "document_attributes": {
                            "type": "object",
                            "description": "Attributes for documentation"
                        }
                    }
                }
            }
        }
    }
}