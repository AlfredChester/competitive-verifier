{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "properties": {
        "files": {
            "type": "object",
            "description": "File path key",
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "display_path": {
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "const": false
                                }
                            ],
                            "examples": [
                                "other_name.ext",
                                false
                            ],
                            "description": "file path for document"
                        },
                        "dependencies": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "description": "dependent file path"
                            }
                        },
                        "verification": {
                            "oneOf": [
                                {
                                    "$ref": "definitions/command.schema.json#/definitions/verification_command"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "$ref": "definitions/command.schema.json#/definitions/verification_command"
                                    }
                                }
                            ]
                        }
                    }
                }
            }
        },
        "pre_command": {
            "oneOf": [
                {
                    "$ref": "#/definitions/shell_command"
                },
                {
                    "type": "array",
                    "items": [
                        {
                            "$ref": "#/definitions/shell_command"
                        }
                    ]
                }
            ]
        }
    },
    "definitions": {
        "shell_command": {
            "type": "string",
            "description": "Shell command"
        }
    }
}