{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "shell_command_types": {
            "oneOf": [
                {
                    "type": "string",
                    "description": "Shell command"
                },
                {
                    "type": "array",
                    "minLength": 1,
                    "description": "Shell command with args"
                }
            ]
        },
        "command_types": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "command": {
                            "$ref": "#/definitions/shell_command_types"
                        },
                        "env": {
                            "type": "object",
                            "description": "Envitonment variables for command"
                        }
                    },
                    "required": [
                        "command"
                    ],
                    "description": "Shell command with data"
                },
                {
                    "$ref": "#/definitions/shell_command_types"
                }
            ]
        },
        "verification_types": {
            "type": "object",
            "description": "Verification definition",
            "allOf": [
                {
                    "properties": {
                        "name": {
                            "type": "string",
                            "description": "Verification name"
                        },
                        "type": {
                            "description": "command type",
                            "enum": [
                                "const",
                                "problem",
                                "command"
                            ]
                        }
                    },
                    "required": [
                        "type"
                    ]
                },
                {
                    "oneOf": [
                        {
                            "description": "Constant result",
                            "properties": {
                                "type": {
                                    "const": "const"
                                },
                                "status": {
                                    "$ref": "result_status.schema.json#/definitions/result_status"
                                }
                            },
                            "required": [
                                "status"
                            ]
                        },
                        {
                            "description": "Command for unittest",
                            "properties": {
                                "type": {
                                    "const": "command"
                                },
                                "command": {
                                    "$ref": "#/definitions/command_types",
                                    "description": "unittest command"
                                },
                                "compile": {
                                    "$ref": "#/definitions/command_types",
                                    "description": "Compile command"
                                }
                            },
                            "required": [
                                "command"
                            ]
                        },
                        {
                            "description": "Command for system test using problem",
                            "properties": {
                                "type": {
                                    "const": "problem"
                                },
                                "command": {
                                    "$ref": "#/definitions/command_types",
                                    "description": "problem solving command"
                                },
                                "compile": {
                                    "$ref": "#/definitions/command_types",
                                    "description": "Compile command"
                                },
                                "problem": {
                                    "type": "string",
                                    "description": "specify the URL of the problem to submit."
                                },
                                "tle": {
                                    "type": "number",
                                    "examples": [
                                        1800
                                    ],
                                    "description": "Threshold seconds to be TLE."
                                },
                                "mle": {
                                    "type": "number",
                                    "examples": [
                                        1000,
                                        256
                                    ],
                                    "description": "Threshold memory usage (MB) to be MLE."
                                },
                                "error": {
                                    "type": "number",
                                    "examples": [
                                        0.000001
                                    ],
                                    "description": "specify the absolute or relative error to be considered as correct."
                                }
                            },
                            "required": [
                                "command",
                                "problem"
                            ]
                        }
                    ]
                }
            ]
        }
    }
}